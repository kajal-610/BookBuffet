<section class="vh-100" style="background-color: lightgray;">
 <%= form_with url: "/admin/login", method: :post do |form|%>
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <h3 class="mb-5">Admin Login</h3>
                <div class="form-outline mb-4">
                  <div class="field">
                    <%= form.label :username, class: "form-label" %>
                    <%= form.text_field :username ,class: "form-control form-conytrol-lg" %>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="field">
                    <%= form.label :password, class: "form-label" %>
                    <%= form.password_field :password, class: "form-control form-conytrol-lg"%>
                  </div>
                </div>
                <div class="actions">
                  <%= form.submit "Admin Login",class: "btn btn-secondary btn-lg btn-block" %> 
                </div>
            <hr class="my-4">
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
</section>





